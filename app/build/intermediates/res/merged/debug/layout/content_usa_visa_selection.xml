<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="international.rst.com.rstsimplified.Activities.UsaVisaSelection"
    tools:showIn="@layout/app_bar_usa_visa_selection">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usa_visa_view_pager">
        <android.support.design.widget.TabLayout
            android:id="@+id/usa_visa_tab_strip"
            android:layout_width="match_parent"
            app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:background="@color/viewColour2"
            android:layout_height="wrap_content"
            android:visibility="visible"/>
    </android.support.v4.view.ViewPager>

</LinearLayout>
