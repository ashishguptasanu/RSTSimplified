<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="4dp"
    app:cardCornerRadius="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e8e8e8">
                <View
                    android:layout_height="2dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Visa + Meet &amp; Greet Combo"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Regular Service"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#cacaca"
                android:layout_marginTop="5dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Type of Visa"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Single Entry"

                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Single Entry"
                    android:id="@+id/visa_type"
                    android:textAlignment="center"
                    android:layout_weight="1"/>

            </TableRow>
            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#cacaca"
                android:layout_marginTop="5dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Visa Validity"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Type of Visa"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="60 days"
                    android:id="@+id/visa_validity"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </TableRow>
            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#cacaca"
                android:layout_marginTop="5dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Stay Validity"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Type of Visa"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="14 days"
                    android:id="@+id/visa_stay_validity"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </TableRow>
            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#cacaca"
                android:layout_marginTop="5dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Process Time"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Type of Visa"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="14 days"
                    android:id="@+id/processing_time"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </TableRow>
            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#cacaca"
                android:layout_marginTop="5dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Visa Fee"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Type of Visa"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="--"
                    android:id="@+id/visa_fee"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </TableRow>
            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#cacaca"
                android:layout_marginTop="5dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Service Fee"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Type of Visa"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="--"
                    android:id="@+id/service_fee"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </TableRow>
            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#807f7f"
                android:layout_marginTop="5dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Total Fee"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Type of Visa"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="--"
                    android:id="@+id/total_fee"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <View
                android:layout_width="1dp"
                android:layout_height="5dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:text="Get Started"
                android:textColor="#fff"
                android:textSize="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:text="Get Started"
                android:textColor="#fff"
                android:textSize="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:id="@+id/button_submit"
                android:background="@drawable/buttonshape"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>