<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_page"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="international.rst.com.rstsimplified.Activities.MainPage"
    tools:showIn="@layout/app_bar_main_page">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/oman">
        </android.support.v4.view.ViewPager>
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="165dp"
            android:layout_above="@+id/card1"/>
    </android.support.design.widget.CoordinatorLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Services"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold"/>
    </android.support.v7.widget.CardView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            app:cardCornerRadius="2dp"
            android:id="@+id/card1"
            android:elevation="6dp"
            android:layout_height="130dp"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/visa_icon"
                android:id="@+id/card_image1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Visa Services"
                android:id="@+id/card_text1"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            app:cardCornerRadius="2dp"
            android:id="@+id/card2"
            android:elevation="6dp"
            android:layout_height="130dp"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/airport"
                android:id="@+id/card_image2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Airport Services"
                android:id="@+id/card_text2"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="130dp">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            app:cardCornerRadius="2dp"
            android:id="@+id/card3"
            android:elevation="6dp"
            android:layout_height="130dp"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/hotel"
                android:layout_gravity="center"
                android:id="@+id/card_image3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Services"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:id="@+id/card_text3"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            app:cardCornerRadius="2dp"
            android:id="@+id/card4"
            android:elevation="6dp"
            android:layout_height="130dp"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/meet"
                android:id="@+id/card_image4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Meet &amp; Greet"
                android:id="@+id/card_text4"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
