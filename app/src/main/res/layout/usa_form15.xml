<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="1dp"
            android:elevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/outbox"
                    android:layout_gravity="left"
                    android:layout_weight="0.21"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/doc1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="15dp"
                    android:text="@string/passport_scanned_copy"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/attach_usa_checked1"
                    android:src="@drawable/unchecked"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.10"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/attach_usa_file1"
                    android:src="@drawable/link"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.10"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="1dp"
            android:elevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/outbox"
                    android:layout_gravity="left"
                    android:layout_weight="0.21"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="@string/passport_scanned_copy2"
                    android:id="@+id/doc2"
                    android:textSize="15dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/attach_usa_checked2"
                    android:src="@drawable/unchecked"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.10"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/link"
                    android:id="@+id/attach_usa_file2"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.10"/>



            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="1dp"
            android:elevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/outbox"
                    android:layout_gravity="left"
                    android:layout_weight="0.21"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/doc3"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="@string/photo_copy"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/attach_usa_checked3"
                    android:src="@drawable/unchecked"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.10"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/link"
                    android:id="@+id/attach_usa_file3"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.10"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="1dp"
            android:elevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/outbox"
                    android:layout_gravity="left"
                    android:layout_weight="0.21"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/doc4"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="@string/miscellaneous_docs"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/attach_usa_checked4"
                    android:src="@drawable/unchecked"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.10"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/link"
                    android:id="@+id/attach_usa_file4"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.10"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/upload_form_note"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/buttonshape"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:id="@+id/button_form15"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Save &amp; Submit"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>