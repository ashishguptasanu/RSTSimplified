<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#efeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/card_living_selection_image"
        android:id="@+id/img_visa_background"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:elevation="15dp"
            app:cardCornerRadius="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:id="@+id/linear_layout_services">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:text="@string/visa"/>
                    <Spinner
                        android:layout_width="150dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="23dp"
                        android:id="@+id/spnr_visa">
                    </Spinner>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/viewColour"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textColor="@color/colorAccent"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="@string/citizen"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="13dp"
                            android:spinnerMode="dialog"
                            android:layout_weight="1"
                            android:id="@+id/spnr_nationality">
                        </Spinner>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="35dp"
                        android:background="#a9a8a8"
                        android:layout_weight=".001"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textColor="@color/colorAccent"
                            android:layout_weight="1"
                            android:text="@string/living"
                            android:id="@+id/textView3" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:spinnerMode="dialog"
                            android:layout_marginRight="13dp"
                            android:id="@+id/spnr_living_in">
                        </Spinner>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/layout_state_usa"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/viewColour"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="States"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"/>
                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/spnr_state"
                        android:spinnerMode="dialog">
                    </android.support.v7.widget.AppCompatSpinner>
                </LinearLayout>
                <ProgressBar
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/progress"
                    android:visibility="gone"
                    android:layout_gravity="center"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="GO"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:id="@+id/services_submission"
                    android:background="@drawable/buttonshape"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"/>
    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:id="@+id/img_background"
        android:layout_marginBottom="15dp"/>




</android.support.design.widget.CoordinatorLayout>