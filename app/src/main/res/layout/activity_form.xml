<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_form"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="international.rst.com.rstsimplified.Activities.FormActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:orientation="horizontal">
        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="25"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1 of 4"
            android:textAlignment="center"
            android:layout_weight="0.2"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select Visa Type"
            android:id="@+id/tv_visa_type"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/checked_gray"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fill Consult Form"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_consult_form"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/checked_gray"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fill Applicant Form"
            android:id="@+id/tv_applicant_form"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/checked_gray"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload Documents"
            android:id="@+id/tv_upload_docs"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/checked_gray"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Proceed To Payment"
            android:id="@+id/tv_payment"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/checked_gray"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:text="Submit"
        android:textColor="#fff"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"/>


</LinearLayout>
